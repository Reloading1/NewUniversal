-- BRAINROT STEALER MENU • FINAL PERFECT
-- Rainbow Timer (original style) • Everything fully toggleable
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui")
local Workspace = game:GetService("Workspace")
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local Camera = Workspace.CurrentCamera
local Plots = Workspace:WaitForChild("Plots")
-- ==================== UI ====================
local ScreenGui = Instance.new("ScreenGui", CoreGui)
ScreenGui.ResetOnSpawn = false
local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, 380, 0, 460)
Main.Position = UDim2.new(0.5, -190, 1, 0)
Main.BackgroundColor3 = Color3.fromRGB(18,18,22)
Main.ClipsDescendants = true
Instance.new("UICorner", Main).CornerRadius = UDim.new(0,14)
Instance.new("UIStroke", Main).Color = Color3.fromRGB(60,60,80)
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1,0,0,50); Title.BackgroundTransparency = 1
Title.Text = "BRAINROT"; Title.TextColor3 = Color3.fromRGB(255,100,255)
Title.Font = Enum.Font.GothamBlack; Title.TextSize = 22
local Sub = Instance.new("TextLabel", Main)
Sub.Position = UDim2.new(0,0,0,45); Sub.Size = UDim2.new(1,0,0,30)
Sub.BackgroundTransparency = 1; Sub.Text = [[RightShift • Toggle Menu -- Made By Reloading :p
Discord >> https://discord.gg/h4NMN3nXDZ]]
Sub.TextColor3 = Color3.fromRGB(180,180,200); Sub.Font = Enum.Font.Gotham; Sub.TextSize = 14
local function CreateToggle(name, yPos, callback)
local Frame = Instance.new("Frame", Main)
    Frame.Size = UDim2.new(0,340,0,46); Frame.Position = UDim2.new(0.5,-170,0,yPos)
    Frame.BackgroundColor3 = Color3.fromRGB(28,28,34)
    Instance.new("UICorner", Frame).CornerRadius = UDim.new(0,10)
local Label = Instance.new("TextLabel", Frame)
    Label.Size = UDim2.new(1,-70,1,0); Label.Position = UDim2.new(0,15,0,0)
    Label.BackgroundTransparency = 1; Label.Text = name
    Label.TextColor3 = Color3.fromRGB(220,220,240); Label.Font = Enum.Font.GothamSemibold
    Label.TextSize = 16; Label.TextXAlignment = Enum.TextXAlignment.Left
local Switch = Instance.new("Frame", Frame)
    Switch.Size = UDim2.new(0,56,0,28); Switch.Position = UDim2.new(1,-70,0.5,-14)
    Switch.BackgroundColor3 = Color3.fromRGB(50,50,60)
    Instance.new("UICorner", Switch).CornerRadius = UDim.new(0,14)
local Circle = Instance.new("Frame", Switch)
    Circle.Size = UDim2.new(0,22,0,22); Circle.Position = UDim2.new(0,4,0.5,-11)
    Circle.BackgroundColor3 = Color3.fromRGB(255,255,255)
    Instance.new("UICorner", Circle).CornerRadius = UDim.new(1,0)
local state = false
local function update()
        TweenService:Create(Switch, TweenInfo.new(0.25), {BackgroundColor3 = state and Color3.fromRGB(120,60,255) or Color3.fromRGB(50,50,60)}):Play()
        TweenService:Create(Circle, TweenInfo.new(0.25), {Position = state and UDim2.new(0,30,0.5,-11) or UDim2.new(0,4,0.5,-11)}):Play()
end
    update()
    Switch.InputBegan:Connect(function(i)
if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
            state = not state
            update()
            callback(state)
end
end)
end
-- ==================== 1. BASE INFO (RAINBOW TIMER AGAIN) ====================
local BaseInfoEnabled = false
local PlotESP = {}
local modifiedTimers = {}
local function CreateText()
local t = Drawing.new("Text")
    t.Size = 21; t.Color = Color3.fromRGB(255,255,240)
    t.Center = true; t.Outline = true; t.OutlineColor = Color3.new(0,0,0)
    t.Font = Drawing.Fonts.Plex; t.Visible = false
return t
end
local function WorldToScreen(pos)
local s,on = Camera:WorldToViewportPoint(pos)
return Vector2.new(s.X,s.Y), on
end
local function nukeTimer(obj)
if not obj or not (obj:IsA("TextLabel") or obj:IsA("TextButton")) or modifiedTimers[obj] or not obj.Text or not obj.Text:match("%d+S") then return end
    modifiedTimers[obj] = true
    obj.TextSize = 200; obj.Font = Enum.Font.GothamBlack
    obj.TextScaled = false; obj.BackgroundTransparency = 1; obj.TextStrokeTransparency = 0
    task.spawn(function()
while task.wait(0.08) and obj and obj.Parent do
            obj.TextColor3 = Color3.fromHSV(tick()%3/3,1,1)
end
end)
end
local function getRealTimer(plot)
for _,v in plot:GetDescendants() do
if (v:IsA("TextLabel") or v:IsA("TextButton")) and v.Text~="" then
local u = v.Text:upper()
if u:find("LOCKED") then return "LOCKED" end
if u:match("%d+S") then return v.Text end
end
end
return "No Timer"
end
local function CreatePlotESP(plot)
if PlotESP[plot] then return end
    PlotESP[plot] = {
        Plot=plot, Owner=CreateText(), PlotLbl=CreateText(),
        Pets=CreateText(), Timer=CreateText(),
        CacheTimer="No Timer", CachePets=0, CacheOwner="Empty", LastUpdate=0
}
end
local function UpdateBaseInfo(data)
if not BaseInfoEnabled then
for _,v in {data.Owner,data.PlotLbl,data.Pets,data.Timer} do v.Visible=false end
return
end
if not data.Plot or not data.Plot.Parent then PlotESP[data.Plot]=nil return end
local pos = data.Plot:GetPivot().Position + Vector3.new(0,12,0)
local scr,on = WorldToScreen(pos)
if not on then
for _,v in {data.Owner,data.PlotLbl,data.Pets,data.Timer} do v.Visible=false end
return
end
if tick()-data.LastUpdate > 0.3 then
        data.LastUpdate = tick()
        data.CacheTimer = getRealTimer(data.Plot)
local pod = data.Plot:FindFirstChild("AnimalPodiums")
        data.CachePets = 0
if pod then
for _,p in pod:GetChildren() do
if p:FindFirstChild("AnimalOverhead",true) then data.CachePets += 1 end
end
end
local sign = data.Plot:FindFirstChild("PlotSign")
        data.CacheOwner = "Empty"
if sign and sign:FindFirstChild("SurfaceGui") then
for _,lbl in sign.SurfaceGui:GetDescendants() do
if lbl:IsA("TextLabel") and lbl.Text:find("[A-Za-z]") then
                    data.CacheOwner = lbl.Text:gsub("Owner: ",""):gsub("Player: ","")
break
end
end
end
end
local y = scr.Y
    data.Owner.Text="Owner: "..data.CacheOwner; data.Owner.Position=Vector2.new(scr.X,y-82); data.Owner.Visible=true
    data.PlotLbl.Text="Plot"; data.PlotLbl.Position=Vector2.new(scr.X,y-62); data.PlotLbl.Visible=true
    data.Pets.Text="Pets: "..data.CachePets; data.Pets.Position=Vector2.new(scr.X,y-42); data.Pets.Visible=true
    data.Timer.Text=data.CacheTimer; data.Timer.Position=Vector2.new(scr.X,y-18); data.Timer.Visible=true
if data.CacheTimer == "LOCKED" then
        data.Timer.Color = Color3.fromRGB(255,60,60)
        data.Timer.Size = 25
elseif data.CacheTimer:match("%d+S") then
        data.Timer.Color = Color3.fromHSV(tick()%3/3,1,1)
        data.Timer.Size = 28
else
        data.Timer.Color = Color3.fromRGB(180,180,180)
        data.Timer.Size = 20
end
end
-- ==================== GOD/SECRET ESP ====================
local GodEspEnabled = false
local hue = 0
local myPlotName = nil
for _,plot in Plots:GetChildren() do
local base = plot:FindFirstChild("YourBase", true)
if base and base:IsA("BoolValue") and base.Value then myPlotName = plot.Name break end
end
local function clearGodESP()
for _,v in Plots:GetDescendants() do
if v:IsA("BillboardGui") and v.Name:match("_ESP$") then v:Destroy() end
end
end
local function updateGodESP()
if not GodEspEnabled then return end
for _,plot in Plots:GetChildren() do
if myPlotName and plot.Name == myPlotName then continue end
for _,label in plot:GetDescendants() do
if label.Name=="Rarity" and label:IsA("TextLabel") and (label.Text=="Brainrot God" or label.Text=="Secret") then
local model = label.Parent.Parent
local income = "?$/s"
for _,v in label.Parent:GetChildren() do
if v:IsA("TextLabel") and v.Text:match("$") and v.Text:match("/s") then income=v.Text break end
end
local bb = model:FindFirstChild(label.Text.."_ESP") or Instance.new("BillboardGui", model)
                bb.Name = label.Text.."_ESP"; bb.Size = UDim2.new(0,130,0,36); bb.StudsOffset = Vector3.new(0,3,0); bb.AlwaysOnTop = true
local txt = bb:FindFirstChildOfClass("TextLabel") or Instance.new("TextLabel", bb)
                txt.Text = income; txt.BackgroundTransparency = 1; txt.TextSize = 20; txt.Font = Enum.Font.GothamBold
                txt.Size = UDim2.new(1,0,1,0); txt.TextStrokeTransparency = 0
if label.Text=="Brainrot God" then
                    txt.TextColor3 = Color3.fromHSV(hue,1,1); txt.TextStrokeColor3 = Color3.new(0,0,0)
else
                    txt.TextColor3 = Color3.new(0,0,0); txt.TextStrokeColor3 = Color3.new(1,1,1)
end
end
end
end
end
-- ==================== BLACK FADE BARS ====================
local BarsEnabled = false
local originalBarData = {}
local function applyBars()
for _,plot in Plots:GetChildren() do
local laser = plot:FindFirstChild("Laser")
if laser then
for _,part in laser:GetDescendants() do
if part:IsA("BasePart") then
if BarsEnabled then
if not originalBarData[part] then
                            originalBarData[part] = {Color=part.Color, Transparency=part.Transparency, Material=part.Material, CanCollide=part.CanCollide}
end
                        part.CanCollide = false
                        part.Material = Enum.Material.Neon
                        part.Color = Color3.new(0,0,0)
local tall = part.Size.Y > math.max(part.Size.X, part.Size.Z) * 1.5
                        part.Transparency = tall and 0.4 or 0.7
else
if originalBarData[part] then
local d = originalBarData[part]
                            part.Color = d.Color
                            part.Transparency = d.Transparency
                            part.Material = d.Material
                            part.CanCollide = d.CanCollide
end
end
end
end
end
end
end
-- ==================== MAP GRAY ====================
local MapGrayEnabled = false
local originalColors = {}
local grayColor = Color3.fromRGB(58,58,62)
local function applyMapGray()
for _,obj in Workspace:GetDescendants() do
if obj:IsA("BasePart") and not obj:FindFirstChildOfClass("Humanoid")
and not string.lower(obj.Name):find("animal")
and not string.lower(obj.Name):find("brainrot")
and not string.lower(obj.Name):find("sammy") then
if MapGrayEnabled then
if not originalColors[obj] then originalColors[obj] = obj.Color end
                obj.Color = grayColor
else
if originalColors[obj] then
                    obj.Color = originalColors[obj]
                    originalColors[obj] = nil
end
end
end
end
end
-- ==================== TOGGLES ====================
CreateToggle("Base Info", 100, function(state) BaseInfoEnabled = state end)
CreateToggle("BrainRot God/Secret ESP", 156, function(state)
    GodEspEnabled = state
if not state then clearGodESP() end
end)
CreateToggle("Black Fade Bars", 212, function(state)
    BarsEnabled = state
    applyBars()
end)
CreateToggle("Map Gray Color", 268, function(state)
    MapGrayEnabled = state
    applyMapGray()
end)
-- ==================== MAIN LOOPS ====================
RunService.Heartbeat:Connect(function(dt)
    hue = (hue + dt * 0.3) % 1
for _,d in pairs(PlotESP) do
pcall(UpdateBaseInfo, d)
end
    updateGodESP()
end)
-- Initial setup
for _,plot in Plots:GetChildren() do
if plot:IsA("Model") and #plot.Name == 36 then CreatePlotESP(plot) end
end
Plots.ChildAdded:Connect(function(p)
    task.wait(0.5)
if p:IsA("Model") and #p.Name == 36 then CreatePlotESP(p) end
end)
Plots.DescendantAdded:Connect(function(obj)
if obj:IsA("TextLabel") or obj:IsA("TextButton") then
        task.delay(0.1, function() nukeTimer(obj) end)
end
end)
Workspace.DescendantAdded:Connect(function(obj)
if MapGrayEnabled and obj:IsA("BasePart") then
        task.delay(0.1, function()
if not obj:FindFirstChildOfClass("Humanoid")
and not string.lower(obj.Name):find("animal")
and not string.lower(obj.Name):find("brainrot") then
if not originalColors[obj] then originalColors[obj] = obj.Color end
                obj.Color = grayColor
end
end)
end
end)
-- ==================== MENU OPEN/CLOSE ====================
local open = false
UserInputService.InputBegan:Connect(function(i,gp)
if gp or i.KeyCode ~= Enum.KeyCode.RightShift then return end
    open = not open
    TweenService:Create(Main, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {
        Position = open and UDim2.new(0.5,-190,0.5,-230) or UDim2.new(0.5,-190,1,0)
}):Play()
end)
StarterGui:SetCore("SendNotification", {Title="BRAINROT MENU", Text="Loaded • Base Info • Full ON/OFF", Duration=10})
print("BRAINROT MENU LOADED ")
